{% extends 'base.html.twig' %}

{% block title %}Hotel {{hotel.name}}{% endblock %}

{% block body %}
    <h1>Hotel</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hotel.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ hotel.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ hotel.phone }}</td>
            </tr>
            <tr>
                <th>Stars</th>
                <td>{{ hotel.stars }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="m-1 border btn btn-secondary" href="{{ path('app_hotel_index') }}">back to list</a>

    <a type="button" class="m-1 border btn btn-warning" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>

    {{ include('hotel/_delete_form.html.twig') }}
{% endblock %}
