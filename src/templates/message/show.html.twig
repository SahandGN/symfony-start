{% extends 'base.html.twig' %}

{% block title %}Message {{ message.subject }}{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('message') }}
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('message') }}
    {% endblock %}
{% block body %}
    <h1>Message</h1>

    <table class="table table-dark table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ message.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ message.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ message.email }}</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>{{ message.subject }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>{{ message.message }}</td>
        </tr>
        </tbody>
    </table>

    <a type="button" class="m-1 btn btn-secondary" href="{{ path('app_message_index') }}">back to list</a>

    <a type="button" class="m-1 btn btn-warning" href="{{ path('app_message_edit', {'id': message.id}) }}">edit</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
