{% extends 'base.html.twig' %}

{% block title %}Rooms list{% endblock %}

{% block body %}
    <h1>Rooms list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hotel</th>
                <th>RoomNumber</th>
                <th>BedNumber</th>
                <th>IsEmpty</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.hotel }}</td>
                <td>{{ room.roomNumber }}</td>
                <td>{{ room.bedNumber }}</td>
                <td>{{ room.isEmpty ? 'Yes' : 'No' }}</td>
                <td>
                    <a type="button" class="btn btn-outline-primary" href="{{ path('app_room_show', {'id': room.id}) }}">show</a>
                    <a type="button" class="btn btn-outline-warning" href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-light" href="{{ path('app_room_new') }}">Create new</a>
{% endblock %}
