{% extends 'base.html.twig' %}

{% block title %}Room {{ room.roomNumber }}{% endblock %}

{% block body %}
    <h1>Room {{ room.roomNumber }}</h1>

    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ room.id }}</td>
        </tr>
        <tr>
            <th>Hotel</th>
            <td>{{ room.hotel }}</td>
        </tr>
        <tr>
            <th>RoomNumber</th>
            <td>{{ room.roomNumber }}</td>
        </tr>
        <tr>
            <th>BedNumber</th>
            <td>{{ room.bedNumber }}</td>
        </tr>
        <tr>
            <th>IsEmpty</th>
            <td>{{ room.isEmpty ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a type="button" class="m-1 btn btn-secondary" href="{{ path('app_room_index') }}">back to list</a>

    <a type="button" class="m-1 btn btn-warning" href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
